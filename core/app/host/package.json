{
  "name": "eisen-host",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --compile --outfile ../src-tauri/bin/eisen-host",
    "build:linux-x64": "bun build src/index.ts --compile --target bun-linux-x64 --outfile ../src-tauri/bin/eisen-host-x86_64-unknown-linux-gnu",
    "build:darwin-x64": "bun build src/index.ts --compile --target bun-darwin-x64 --outfile ../src-tauri/bin/eisen-host-x86_64-apple-darwin",
    "build:darwin-arm64": "bun build src/index.ts --compile --target bun-darwin-arm64 --outfile ../src-tauri/bin/eisen-host-aarch64-apple-darwin",
    "build:windows-x64": "bun build src/index.ts --compile --target bun-windows-x64 --outfile ../src-tauri/bin/eisen-host-x86_64-pc-windows-msvc.exe",
    "build:all": "bun run build:linux-x64 && bun run build:darwin-x64 && bun run build:darwin-arm64 && bun run build:windows-x64"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.14.1",
    "@mastra/core": "^1.5.0",
    "ai": "^6.0.97",
    "fast-glob": "^3.3.0",
    "marked": "^17.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "bun-types": "^1.3.9"
  }
}
